@using Fred.Web.Shared.App_LocalResources
@{
    Layout = "~/Views/Shared/_Layout.new.cshtml";
}
@section styles {
    @Styles.Render("~/CacheBundleFactory.css")
}

@section scripts {
    @Scripts.Render("~/CacheBundleFactory.js")
    @this.RenderResources("FeatureCache")
}

<div class="container" ng-controller="CacheController as ctrl">

    <div class="toleft">

        <!-- START : Titre de la page -->
        <h1><span class="flat">{{ctrl.resources.Cache_Index_Titre}}</span></h1>
        <!--END : Titre de la page -->
        <!--LISTE : START-->
        <div class="row">
            <div class="col-md-12">
                <div ng-repeat="item in ctrl.cacheList">
                    <div class="row line">
                        <div class="col-md-4">
                            <div class="lb"> {{ctrl.resources.Cache_Index_CacheKey}}</div>
                            <div class="val">{{item.CacheKey}}</div>
                        </div>
                        <div class="col-md-4">
                            <div class="lb">{{ctrl.resources.Cache_Index_CacheValue}}</div>
                            <div class="val">{{item.CacheValue}}</div>
                        </div>
                        <div class="col-md-3">
                            <div class="lb">{{ctrl.resources.Cache_Index_DateExpiration}}</div>
                            <div class="val">{{item.DateExpiration | date: 'dd/MM/yyyy HH:mm'}}</div>
                        </div>

                        <div class="col-md-1" ng-click="ctrl.handleDelete(item)">
                            <div class="bdg delete ">{{ctrl.resources.Cache_Index_Supprimer}}</div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <!--LISTE : END-->
        </div>
    </div>
</div>