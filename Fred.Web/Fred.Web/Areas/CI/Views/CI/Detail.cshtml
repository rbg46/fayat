@using Fred.Web.Shared.App_LocalResources
@using Fred.Web.Modules.Authorization.Asp;
@{
  ViewBag.Title = FeatureCI.CI_Detail_TitreOnglet;
  Layout = "~/Views/Shared/_Layout.new.cshtml";
}
@section styles {
  @Styles.Render("~/CIDetailBundle.css")
}

@section scripts {

  @Scripts.Render("~/CIDetailBundle.js")
  @Scripts.Render("https://maps.google.com/maps/api/js?libraries=placeses,visualization,drawing,geometry,places&key=AIzaSyDwru8fGuoaw-edau7EllAiihzwf2ogF4Y")
  @this.RenderResources("FeatureDevise", "FeatureCI", "FeatureEtablissementComptable")
}
@Html.SetPermissionsContextuellesForCi((int?)ViewBag.id)
<div class="container" ng-controller="CIDetailController as ctrl" ng-init="ctrl.handleLoadPage('@ViewBag.id')">

  <h6><span onclick="@("window.location.href='" + @Url.Action("Index") + "'")">{{ctrl.resources.CI_Detail_RetourListeCI}}</span></h6>
  <h1>{{ctrl.resources.CI_Detail_Titre}} {{ctrl.initialCI.CodeLibelle}}</h1>

  <div class="col-md-2 summary">
    <p>
      <label class="t1">{{ctrl.resources.CI_Detail_Description}} </label>

      <label class="t2a">{{ctrl.resources.CI_Detail_Societe}}</label>
      <label class="t2b">{{ctrl.panels.general.data.Societe.CodeLibelle | checkEmpty}}</label>

      <label class="t2a">{{ctrl.resources.Global_PUO}}</label>
      <label class="t2b">{{ctrl.initialCI.PUO.CodeLibelle | checkEmpty}}</label>

      <label class="t2a">{{ctrl.resources.Global_UO}}</label>
      <label class="t2b">{{ctrl.initialCI.UO.CodeLibelle | checkEmpty}}</label>

      <label class="t2a">{{ctrl.resources.Global_Etablissement}}</label>
      <label class="t2b">{{ctrl.panels.general.data.EtablissementComptable.CodeLibelle | checkEmpty}}</label>

      <label class="t2a">{{ctrl.resources.Global_CI}}</label>
      <label class="t2b">{{ctrl.initialCI.CodeLibelle | checkEmpty }}</label>

    </p>
  </div>

  <div class="col-md-10">
    <div class="panel-group" id="ci-accordion">
      @Html.Partial("_PartialGeneral")      
      @Html.Partial("_PartialPaie")
      @Html.Partial("_PartialFacturation")
      @Html.Partial("_PartialDevise")
      @Html.Partial("_PartialCarburant")
      <fred-authorization is-to-adjust-css="true" key="menu.ci.detail.gestion.equipe">
        @Html.Partial("_PartialTeam")
      </fred-authorization>
    </div>
  </div>
</div>
