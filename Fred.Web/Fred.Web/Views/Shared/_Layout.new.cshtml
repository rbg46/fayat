<body class="container"
      ng-cloak
      ng-controller="mainController as mainCtrl">
    <div id="BLOCK_SCREEN_EXCEPT_MENU"></div>
    <div id="mask" ng-class="{'open':mainCtrl.headerMobileIsOpen===true}"></div>

    <fred-application-header logo="mainCtrl.logo"
                             user="mainCtrl.utilisateur"
                             version="mainCtrl.version"
                             resources="mainCtrl.resources"
                             mode-menu="mainCtrl.modeMenu"
                             display-menu-modern="mainCtrl.displayMenuModern">
    </fred-application-header>
    <fred-application-header-mobile header-mobile-is-open="mainCtrl.headerMobileIsOpen">
    </fred-application-header-mobile>
    <fred-user-panel user="mainCtrl.utilisateur"
                     photo-profil="mainCtrl.photoProfil"
                     is-open="mainCtrl.panelUserIsOpen"
                     ng-show="mainCtrl.panelUserIsOpen"
                     version="mainCtrl.version">
    </fred-user-panel>
    <fred-menu header-mobile-is-open="mainCtrl.headerMobileIsOpen"
               resources="mainCtrl.resources"
               mode-menu="mainCtrl.modeMenu"
               modern-menu-is-open="mainCtrl.ModernMenuIsOpen"
               modules-autorized="mainCtrl.modulesAutorized"
               menu-admin-is-visible="mainCtrl.menuAdminIsVisible"
               background-img-url="mainCtrl.backgroundImgUrl">

    </fred-menu>

    <div class="content" ng-class="{'menu-modern': mainCtrl.modeMenu=='modern', 'page-home': isHomePage()}" ng-if="mainCtrl.utilisateur">
        @Html.SetGlobalHabilitation()
        @Html.GetFeatureFlipping()
        @RenderBody()
    </div>

    @Scripts.Render("~/vendor/js", "~/app/js")
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    @RenderSection("scripts", required: false)
    @this.RenderResources("FredResource", "FeatureHome", "FeatureFavori")
</body>
</html>